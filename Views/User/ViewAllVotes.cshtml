@model List<vote_box.Models.PollModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View All Votes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white text-center">
                        <h1 class="display-4">All Votes</h1>
                    </div>
                    <div class="card-body">
                        @if (Model.Count > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var poll in Model)
                                    {
                                        <tr>
                                            <td>@poll.Title</td>
                                            <td>@poll.Description</td>
                                            <td>@poll.StartTime.ToString("yyyy-MM-ddTHH:mm")</td>
                                            <td>@poll.EndTime.ToString("yyyy-MM-ddTHH:mm")</td>
                                            <td>
                                                <a href="@Url.Action("ViewVotes", "User", new { pollId = poll.Id })" class="btn btn-info">View Votes</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No available polls.</p>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <a href="/User/ViewPolls" class="btn btn-primary">Back to Polls</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
