@model vote_box.Models.PollModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Votes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white text-center">
                        <h1 class="display-4">Votes for Poll: @Model.Title</h1>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Option</th>
                                    <th>Vote Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var option in Model.Options)
                                {
                                    <tr>
                                        <td>@option.Text</td>
                                        <td>@option.VoteCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/User/ViewAllVotes" class="btn btn-primary">Back All Votes</a>
                        <a href="/User/ViewPolls" class="btn btn-primary">Back to Polls</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
